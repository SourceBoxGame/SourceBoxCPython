def configure(conf):
	conf.env.CFLAGS = ["/Z7"]
	conf.env.CXXFLAGS = ["/Z7"]
	conf.env.LINKFLAGS += ["pathcch.lib","Version.lib","Advapi32.lib","Bcrypt.lib","/DEBUG:FULL"]
